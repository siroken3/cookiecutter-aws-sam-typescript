{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./build",
        "allowJs": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [
            "es5",
            "es2015",
            "es2016.array.include",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
